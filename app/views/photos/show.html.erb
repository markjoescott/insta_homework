<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<dl class="dl-horizontal">
  <!-- <dt>Image url</dt> -->
  <dd><img src ="<%= @photo.image_url %>" width="500">   </dd>

  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>

</dl>
<br>

<table class="table table-striped table hover"> Comments
<br>
<% @photo.comments.each do|comment| %>

<tr>
  <td>
        <%= comment.content%>

    </td>
  </tr>
<%end %>

</table>


<dl class="dl-vertical">


<form action="/create_comment" class="form-horizontal">
  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Content
    </label>
    <div class="col-sm-10">
      <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for photo_id -->

<form action="/create_comment">
 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
 </div>

  <div class="col-sm-10">
    <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @photo.id %>">
  </div>

</form>

<form action="/create_favorite">
 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Favorite this Photo" class="btn btn-warning">
    </div>
  </div>
    <div class="col-sm-10">
    <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @photo.id %>">
  </div>

  <% @photo.favorites.each do|favorite| %>

<tr>
  <td>
        <%= favorite.photo.id%>

  </td>
</tr>
<%end %>
</form>
<dl class="dl-horizontal">

  <dt>Fans of this photo</dt>
  <dd><%= @photo.fans %></dd>

</dl>

